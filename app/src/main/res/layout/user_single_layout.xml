<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:padding="10dp"
    android:background="@drawable/shape_title_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_single_layout_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avatar"/>

    <TextView
        android:id="@+id/user_single_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/user_single_layout_image_view"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/profile_text_size"
        android:textColor="#000" />

    <TextView
        android:id="@+id/user_single_layout_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_single_layout_name"
        android:layout_toLeftOf="@id/user_single_layout_image_view"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/profile_text_size"
        android:textColor="#000" />

    <TextView
        android:id="@+id/user_single_layout_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_single_layout_address"
        android:layout_toLeftOf="@id/user_single_layout_image_view"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/profile_text_size"
        android:textColor="#000" />


</RelativeLayout>
